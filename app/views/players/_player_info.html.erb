<% if @players.any? %>
  <% @players.each do |player| %>
    <div class="player-info test" id="blue-pic" data-action="mouseover->player#hello" data-action="click->player#hello">
      <div class="info-content">
        <span class="number-design"><%= player.number %></span>
        <span class="player-name" data-id="<%= player.id %>"><%= player.first_name %> <%= player.last_name %></span>
        <img src="assets/blue.png" alt="">
      </div>
    </div>
  <% end %>
<% else %>
  <em>Sorry, no players found.</em>
<% end %>
